<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p id="errorExplanation"><%=  error %> cannot be blank.</p>
  <% end %>
<% end %>
<p>
  Search tip: multiple selections can be made in the selection boxes by holding ctrl.
</p>
<p>
  <%= f.label :name, "Query Name (Required)" %><br />
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :description, "Query Description (Optional)" %><br />
  <%= f.text_field :description %>
</p>
<p>
  <%= f.label :virus_type, "Virus Subtype" %><br />
  <%= select_tag 'query[virus_type]', options_for_select(@types, "-ALL-"), {:size => 3} %>
</p>
<p>
  <%= f.label :h1n1_swine_set, "Pandemic/Seasonal H1N1" %><br />
  <%= select_tag 'query[h1n1_swine_set]', options_for_select(@lineages, "-ALL-") %>
</p>
<table border="0" cellpadding="0" >
  <tr>
    <td valign="top">
    <%= f.label :location %><br />
    <%= select_tag 'query[location]', options_for_select(@locations, "-ALL-"), {:size => 20, :multiple => true} %>
    </td>
    <td valign="top" >
    <%= f.label :host %><br/>
    <%= select_tag 'query[host]', options_for_select(@hosts, "-ALL-"), {:size => 20, :multiple => true} %>
    </td>
  </tr>
</table>
<p>
  Date Range<br />
  <%= f.date_select :min_collect_date, :order => [:month, :day, :year], :start_year => 2000, :end_year => Date.today.year, :include_blank => true, :default => nil %> to
  <%= f.date_select :max_collect_date, :order => [:month, :day, :year], :start_year => 2000, :end_year => Date.today.year, :include_blank => true, :default => nil %>
</p>
<p>
  Genes (all included if none are checked)<br />
  PB2<%= f.check_box :pb2%>PB1<%= f.check_box :pb1%>PA<%= f.check_box :pa%>HA<%= f.check_box :ha%>
  NP<%= f.check_box :np%>NA<%= f.check_box :na%>MP<%= f.check_box :mp%>NS<%= f.check_box :ns%>
</p>
