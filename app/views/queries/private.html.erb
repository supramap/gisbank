<h1>Listing Queries</h1>


<p>
  
</p>

<div class="list">
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Options</th>
  </tr>
  <% @queries.each do |query| %>
  <tr>
    <td><%=h query.name %></td>
    <td><%=h query.description %></td>
    <td>
      <%= link_to 'Show Results', query %> |
      <%= link_to 'Edit', edit_query_path(query) %> |
      <%= link_to 'Delete', query, :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>
</div>
